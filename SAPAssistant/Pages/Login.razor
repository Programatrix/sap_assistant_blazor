@page "/login"
@using SAPAssistant.Models
@using SAPAssistant.Service
@layout PublicLayout

<!-- Envolvemos el formulario con las clases adecuadas -->
<div class="page-login-wrapper">
    <EditForm Model="loginModel" OnValidSubmit="HandleLogin" class="login-box">
        <h1>Iniciar Sesión</h1>
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="input-group">
            <label for="username">Usuario</label>
            <InputText id="username" class="input" @bind-Value="loginModel.Username" placeholder="Usuario" />
        </div>

        <div class="input-group">
            <label for="password">Contraseña</label>
            <InputText id="password" type="password" class="input" @bind-Value="loginModel.Password" placeholder="Contraseña" />
        </div>

        <button type="submit">Entrar</button>
    </EditForm>
</div>

@code {
    private LoginRequest loginModel = new();
    [Inject] private AuthService AuthService { get; set; } = default!;
    [Inject] private NavigationManager Navigation { get; set; } = default!;

    private async Task HandleLogin()
    {
        var success = await AuthService.LoginAsync(loginModel);
        if (success)
        {
            Navigation.NavigateTo("/");
        }
    }
}
