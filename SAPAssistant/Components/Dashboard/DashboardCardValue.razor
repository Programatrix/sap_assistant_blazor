@using SAPAssistant.Models
@using SAPAssistant.Service

<div class="dashboard-card">
    <div class="card-header">
        @if (!string.IsNullOrWhiteSpace(Card.TypeLabel) || !string.IsNullOrWhiteSpace(Card.TypeIcon))
        {
            <span class="card-tag">@Card.TypeIcon @Card.TypeLabel</span>
        }

        <div class="card-actions">
            <button @onclick="Refresh">🔄</button>
            @if (!Card.IsFixed)
            {
                <button @onclick="Delete">❌</button>
            }
        </div>
    </div>

    @if (ShowTitle)
    {
        <h2>@Card.Title</h2>
    }

    @if (Card.IsLoading)
    {
        <div class="spinner-container">
            <div class="spinner"></div>
        </div>
    }
    else
    {
        <p class="big-number">
            @Card.Value
            @if (!string.IsNullOrWhiteSpace(Card.Unit))
            {
                <span class="unit-label">@Card.Unit</span>
            }
        </p>
    }

    <p class="card-description">@Card.Description</p>

    @if (Card.LastUpdated != null || Card.Popularity > 0)
    {
        <div class="card-meta">
            @if (Card.LastUpdated != null)
            {
                <span class="updated-at">🕒 @Card.LastUpdated.Value.ToString("dd MMM yyyy")</span>
            }
            @if (Card.Popularity > 0)
            {
                <span class="popularity">🔥 Usado por @Card.Popularity usuario@(Card.Popularity == 1 ? "" : "s")</span>
            }
        </div>
    }
</div>

@code {
    [Parameter]
    public DashboardCardModel Card { get; set; } = default!;

    [Parameter]
    public bool ShowTitle { get; set; } = true;

    [Inject]
    private DashboardService DashboardService { get; set; } = default!;

    private async Task Refresh()
    {
        if (Card.RefreshAsync != null)
        {
            Card.IsLoading = true;
            StateHasChanged();
            await Card.RefreshAsync(async () =>
            {
                Card.IsLoading = false;
                await InvokeAsync(StateHasChanged);
            });
        }
    }

    private void Delete()
    {
        DashboardService.DeleteKPI(Card.Id);
    }
}

