@inject IJSRuntime JS
@page "/landing"
@layout LandingLayaout

<div class="landing-wrapper">
    <!-- 1. Hero -->
    <HeroSection ScrollToDemo="ScrollToSection" />

    <!-- 2. Cómo funciona -->
    <HowItWorks />

    <!-- 3. Beneficios -->
    <BenefitsSection />

    <!-- 4. Demo / asistente -->
    <section id="demo" class="demo-section">
        <h2>Asistente en acción</h2>
        <p>Prueba cómo funciona el asistente en tiempo real, sin necesidad de registrarte.</p>
        <div class="demo-container">
            <SAPAssistant.Components.Chat.DemoChat />
        </div>
    </section>
</div>


@code {
    private async Task ScrollToSection(string id)
    {
        await JS.InvokeVoidAsync("scrollToId", id);
    }
}
