@using SAPAssistant.Models
@using Microsoft.AspNetCore.Components

@switch (Card.CardType)
{
    case DashboardCardType.ValueOnly:
        <DashboardCardValue Card="Card" ShowTitle="ShowTitle" />
        break;
    case DashboardCardType.Comparative:
        <DashboardCardComparative Card="Card" ShowTitle="ShowTitle" />
        break;
    case DashboardCardType.MiniChart:
        <DashboardCardMiniChart Card="Card" ShowTitle="ShowTitle" />
        break;
    default:
        <div class="dashboard-card error-card">
            @if (ShowTitle)
            {
                <h2>@Card.Title</h2>
            }
            <p>Tipo de tarjeta desconocido. Por favor revisa la configuración del KPI.</p>
        </div>
        break;
}

@code {
    [Parameter]
    public DashboardCardModel Card { get; set; } = default!;

    [Parameter]
    public bool ShowTitle { get; set; } = true;
}
