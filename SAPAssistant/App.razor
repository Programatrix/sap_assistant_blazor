<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            @if (routeData.PageType.Name == "Login") // o "Register", etc.
            {
                <RouteView RouteData="@routeData" DefaultLayout="@typeof(PublicLayout)" />
            }
            else
            {
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(AssistantLayout)">
                    <NotAuthorized>
                        <LayoutView Layout="@typeof(PublicLayout)">
                            <p>No tienes acceso a esta página. Inicia sesión.</p>
                            <a href="/login">Ir al Login</a>
                        </LayoutView>
                    </NotAuthorized>
                </AuthorizeRouteView>
            }
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(PublicLayout)">
                <p>404 - Página no encontrada</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
