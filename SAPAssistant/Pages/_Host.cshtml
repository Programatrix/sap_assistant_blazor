@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace SAPAssistant.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="SAPAssistant.styles.css" rel="stylesheet" />
    <link href="css/variables.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
    <script src="js/chatEnhancer.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="js/chart-helper.js"></script>
    <script src="js/textarea-resize.js"></script>
    <script src="js/utils.js"></script>
    <script src="js/scripts.js"></script>
    <script src="js/theme.js"></script>

    <link href="css/ConectionManager.css" rel="stylesheet" />
    <link href="css/ChatHistoryItem.css" rel="stylesheet" />
    <link href="css/resultmessage.css" rel="stylesheet" />
    <link href="css/theme.css" rel="stylesheet" />

    <!-- ✅ MudBlazor -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />

    

</head>

<body>
    <component type="typeof(App)" render-mode="Server" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script>
        window.blazorAutoResize = {
            resize: function (textarea) {
                if (textarea) {
                    textarea.style.height = 'auto';
                    textarea.style.height = textarea.scrollHeight + 'px';
                }
            }
        };
    </script>

    <script>
        window.demoStorage = {
            setRemaining: function (value) {
                sessionStorage.setItem('demo_remaining_attempts', value);
            },
            getRemaining: function () {
                return sessionStorage.getItem('demo_remaining_attempts');
            }
        };
    </script>

    <script>
        window.viewTypePref = {
            set: function (value) {
                localStorage.setItem('preferred_view_type', value);
            },
            get: function () {
                return localStorage.getItem('preferred_view_type');
            }
        };
    </script>

        
    <script src="_content/MudBlazor/MudBlazor.min.js?v=8.9.0"></script>
    
    <script src="_framework/blazor.server.js"></script>
</body>
</html>
